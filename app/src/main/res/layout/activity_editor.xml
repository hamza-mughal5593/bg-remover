<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.Editor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_editor" />


    <RelativeLayout
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/options_layout"
        android:layout_below="@+id/toolbar">


        <com.impulsive.zoomimageview.ZoomImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp">

        </com.impulsive.zoomimageview.ZoomImageView>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_editing_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:paddingVertical="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/filters_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/filter_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                >

                <ImageView
                    android:id="@+id/filter_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/close" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Filter"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/filter_next"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/ic_done"
                    android:visibility="gone"
                    />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_main_layout"
                android:background="#2C2C2C"
                android:paddingVertical="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bgs_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/bg_main_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/bg_close"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/close" />

                <TextView
                    android:id="@+id/bg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Backgrounds"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bg_txt"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/color_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Colors"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gradient_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/gradient" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Gradients"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/images_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Images"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/colors_mains_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/colors_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/color_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/close" />


                <TextView
                    android:id="@+id/bg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Colors"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colors_main_layout"
                android:background="#2C2C2C"
                android:paddingVertical="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stickers_mains_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/stickers_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/stickers_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/close" />


                <TextView
                    android:id="@+id/bg_type_stickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Stickers"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stickers_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stickers_main_layout"
                android:layout_centerHorizontal="true"
                android:background="#2C2C2C" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stickers_sub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/recycler_stickers_main"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#2C2C2C" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adjustments_mains_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/adjustments_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/adjustments_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/close" />


                <TextView
                    android:id="@+id/adjustments_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Adjustments"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/adjustments_next"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/adjustment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adjustments_main_layout"
                android:visibility="gone">

                <TextView
                    android:id="@+id/adjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Brightness"
                    android:textColor="#ffffff" />


                <TextView
                    android:id="@+id/adjustment_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/adjustment"
                    android:text="0"
                    android:textColor="#ffffff" />


                <SeekBar
                    android:id="@+id/brightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:max="100"
                    android:min="-100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_background"
                    android:shape="oval"
                    android:splitTrack="false"
                    android:thumb="@drawable/oval_seekbar_thumb"
                    android:thumbOffset="10dp"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/contrass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="10"
                    android:min="0"
                    android:progress="50"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/saturation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginTop="20dp"
                    android:max="10"
                    android:min="0"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/exposure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/hue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/sharpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/vibrance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/vigentee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/highLights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="50"
                    android:min="0"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />


                <SeekBar
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/blur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adjustment"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="20dp"
                    android:max="100"
                    android:min="10"
                    android:progressTint="@color/theme_color"
                    android:thumbTint="@color/theme_color"
                    android:visibility="gone" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_adjustments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adjustment_layout"
                android:background="#2C2C2C"
                android:paddingVertical="@dimen/_10sdp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>