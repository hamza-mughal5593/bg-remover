<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.Editor">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_editor" />


    <RelativeLayout
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/options_layout"
        android:layout_below="@+id/toolbar">



        <com.impulsive.zoomimageview.ZoomImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20sdp"
            >
        </com.impulsive.zoomimageview.ZoomImageView>



        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_editing_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:paddingVertical="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/filters_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/filter_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/filter_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/back" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Filter"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/filter_next"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/next" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_main_layout"
                android:background="#2C2C2C"
                android:paddingVertical="@dimen/_10sdp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bgs_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/bg_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/bg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Backgrounds"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bg_txt"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/color_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Colors"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gradient_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Gradients"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/images_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Images"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/colors_mains_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/colors_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/color_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/back" />


                <TextView
                    android:id="@+id/bg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Colors"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/colors_next"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/next" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colors_main_layout"
                android:background="#2C2C2C"
                android:paddingVertical="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stickers_mains_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2C2C2C"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/stickers_main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/stickers_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/back" />


                <TextView
                    android:id="@+id/bg_type_stickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Stickers"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/stickers_next"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/next" />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stickers_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stickers_main_layout"
                android:background="#2C2C2C"
                android:layout_centerHorizontal="true"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_stickers_sub"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/recycler_stickers_main"
                android:background="#2C2C2C"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>